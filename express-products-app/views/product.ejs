<%- include('partials/header.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>
<body>
    <main>
        <div class="container">
            <%- include('partials/navigation.ejs') %>
            <div class="products">
                <% if (products && products.length > 0) { %>
                    <% products.forEach((product) => { %>
                        <div class="products__item">
                            <h4 class="title mb-16"><%= product.title %></h3>
                            <img src="https://picsum.photos/200/200" class="mb-16" />
                            <form action="/cart" method="POST">
                                <input type="number" name="quantity" value="<%= product && product.quantityInCart ? product.quantityInCart : 0 %>" />
                                <input type="hidden" name="product" value="<%= JSON.stringify(product) %>" />
                                <input type="submit" value="Add to Cart">
                            </form>
                            
                        </div>
                    <% }) %>
                <% } else { %>
                    <div>No Product Found</div>
                <% } %>
            </div>
            
        </div>
    </main>
<%- include('partials/footer.ejs') %>